#version 420 compatibility

uniform sampler2D uniform_diffuse;
uniform sampler2D uniform_specular;
uniform sampler2D uniform_normal;

in highp vec3 out_lightColour;
in highp vec3 out_lightDirection;

in highp vec3 out_normal;
in highp vec2 out_texcoord;

void main(){
	highp vec4 diffuse = texture2D(uniform_diffuse, out_texcoord);
	

	highp vec3 normal = normalize(texture2D(uniform_normal, out_texcoord).rgb);
	
	//float intensity = max(dot(normal, out_lightDirection), 0.0);
	
	//gl_FragColor = vec4(out_normal, 1);
	
	highp float specular = texture2D(uniform_specular, out_texcoord).x + 1;
	
	gl_FragColor = vec4((diffuse.rgb * out_lightColour) * specular, diffuse.a);
}